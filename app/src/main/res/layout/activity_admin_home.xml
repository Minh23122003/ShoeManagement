<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang quản trị - Admin"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="32dp"/>

        <!-- Nút quản lý người dùng -->
        <Button
            android:id="@+id/buttonManageUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý Người dùng"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Nút quản lý đơn hàng -->
        <Button
            android:id="@+id/buttonManageBills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý Đơn hàng"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Nút quản lý danh mục -->
        <Button
            android:id="@+id/buttonManageCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý Danh mục"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Nút quản lý đánh giá -->
        <Button
            android:id="@+id/buttonManageRatings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý Đánh giá"
            android:backgroundTint="#9C27B0"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Nút quản lý giày -->
        <Button
            android:id="@+id/buttonManageShoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý Sản phẩm (Giày)"
            android:backgroundTint="#795548"
            android:textColor="#FFFFFF" />


    </LinearLayout>
</ScrollView>