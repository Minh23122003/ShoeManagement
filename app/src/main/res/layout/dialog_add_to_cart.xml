<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Hình ảnh sản phẩm -->
    <ImageView
        android:id="@+id/imageViewShoe"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop" />

    <!-- Tên giày -->
    <TextView
        android:id="@+id/textViewShoeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tên giày"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Thông tin mô tả -->
    <TextView
        android:id="@+id/textViewShoeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Thông tin giày"
        android:textColor="#555555"
        android:textSize="14sp" />

    <!-- Giá và danh mục -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewShoePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="₫123.000"
            android:textColor="#FF5722"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewShoeCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Thể thao"
            android:textColor="#2196F3"
            android:textSize="14sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/textViewShoeQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:text="Số lượng: *125*"
        android:textColor="#FF5722"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn size:"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:textColor="#000"/>


        <EditText
            android:id="@+id/editTextSize"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="36"
            android:padding="4dp"
            android:background="@android:drawable/editbox_background_normal"/>
    </LinearLayout>

    <!-- EditText nhập số lượng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng:"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/editTextQuantity"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="1"
            android:padding="4dp"
            android:background="@android:drawable/editbox_background_normal"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="10dp">

        <Button android:id="@+id/buttonConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xác nhận"
            android:textSize="20dp"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"/>

        <Button android:id="@+id/buttonCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quay lại"
            android:textSize="20dp"
            android:backgroundTint="#bdb9b9"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>